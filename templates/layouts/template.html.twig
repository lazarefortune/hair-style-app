<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> {% block title %} HairStyle - {% endblock %} </title>
    
    {# Bootstrap css #}
    <link rel="stylesheet" href="{{ asset('assets/dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/scss/main.css') }}">
    {# Template css #}
    <link rel="stylesheet" href="{{ asset('assets/css/template.css') }}">
    {% block stylesheets %}
        {# {{ encore_entry_link_tags('app') }} #}
    {% endblock %}
    
    {% block javascripts_header %}
        {# {{ encore_entry_script_tags('app') }} #}
    {% endblock %}
</head>
<body>

    <!-- Header nav -->
    <nav class="navbar navbar-expand-lg navbar-light header__nav">
        <a class="navbar-brand" href="#">Hair style</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Prestations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Tarifs</a>
                </li>
                {% if app.user %}
                    <li class="nav-item">
                        {{ app.user.email }}
                        <a class="nav-link" href="{{ path('app_logout') }}">Se d√©connecter</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>

    {% block body %}{% endblock %}

    <script src="{{ asset('assets/js/template.js') }}"></script>
    {% block javascripts_footer %}{% endblock %}
</body>
</html>